	pathlist+=("$rootdir/Saves/Neo-Geo/CDZ")
	pathlist+=("$rootdir/Saves/PSP")
	pathlist+=("$rootdir/Saves/Genesis")

	#create dotfiles
	pathlist+=("$HOME/.qjoypad3")
